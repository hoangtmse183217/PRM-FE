<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Header: Chào mừng và nút Đăng xuất -->
    <TextView
        android:id="@+id/welcomeLabelTextView"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_welcome"
        android:textColor="@color/text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNameTextView"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeLabelTextView"
        tools:text="Hoang" />

    <ImageButton
        android:id="@+id/signOutButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/main_sign_out_button_desc"
        android:src="@drawable/ic_signout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/welcomeLabelTextView"
        app:tint="@color/text_secondary" />

    <!-- Thanh tìm kiếm -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userNameTextView">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            app:queryHint="@string/main_search_hint" />

    </androidx.cardview.widget.CardView>

    <!-- Bộ lọc (Filters) -->
    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchCardView">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/locationFilterButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_filter_location"
            android:textAllCaps="false"
            android:textColor="@color/text_secondary"
            app:icon="@drawable/ic_location"
            app:iconTint="@color/primary_brand" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/priceFilterButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_filter_price"
            android:textAllCaps="false"
            android:textColor="@color/text_secondary"
            app:icon="@drawable/ic_dollar"
            app:iconTint="@color/primary_brand" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/timeFilterButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_filter_time"
            android:textAllCaps="false"
            android:textColor="@color/text_secondary"
            app:icon="@drawable/ic_time"
            app:iconTint="@color/primary_brand" />
    </LinearLayout>

    <!-- Tiêu đề mục Món ăn nổi bật -->
    <TextView
        android:id="@+id/bestFoodsTitleTextView"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/main_best_foods_title"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterLayout" />

    <TextView
        android:id="@+id/viewAllTextView"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_view_all"
        android:textColor="@color/primary_brand"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/bestFoodsTitleTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nơi hiển thị danh sách món ăn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/bestFoodsTitleTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_food_card" />
    <!-- `tools:listitem` giúp bạn xem trước giao diện trong trình thiết kế -->

</androidx.constraintlayout.widget.ConstraintLayout>